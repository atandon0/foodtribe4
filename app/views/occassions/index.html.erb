<div class="page-header">
  <h1>
    Occassions
    <a href="/occassions/new" class="btn btn-lg btn-success">New Occassion</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Occassion name</th>
        <th>Photo</th>
        <th>Actions</th>
      </tr>

      <% @occassions.each do |occassion| %>
      <tr>
        <td><%= occassion.occassion_name %></td>
        <td><%= occassion.photo %></td>
        <td>
          <a href="/occassions/<%= occassion.id %>" class="btn btn-primary">Show</a>
          <a href="/occassions/<%= occassion.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_occassion/<%= occassion.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
