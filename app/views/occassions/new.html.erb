<!-- Validation failure messages -->
<% if @occassion.errors.any? %>
  <% @occassion.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Occassion</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_occassion" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for occassion_name -->
      <div class="form-group">
        <label for="occassion_name" class="control-label">
          Occassion name
        </label>

        <input type="text" id="occassion_name" name="occassion_name" placeholder="Occassion name" class="form-control" value="<%= @occassion.occassion_name %>">
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="control-label">
          Photo
        </label>

        <input type="text" id="photo" name="photo" placeholder="Photo" class="form-control" value="<%= @occassion.photo %>">
      </div>

      <button class="btn btn-success">
        Create Occassion
      </button>
      or
      <a href="/occassions">Cancel</a>
    </form>
  </div>
</div>
