<div class="page-header">
  <h3>Occassion #<%= @occassion.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Occassion name</dt>
      <dd><%= @occassion.occassion_name %></dd>

      <dt>Photo</dt>
      <dd><%= @occassion.photo %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/occassions" class="btn btn-primary">
        Back
      </a>
      <a href="/occassions/<%= @occassion.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_occassion/<%= @occassion.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
