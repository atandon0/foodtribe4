<div class="page-header">
  <h1>
    Cuisines
    <a href="/cuisines/new" class="btn btn-lg btn-success">New Cuisine</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Cuisine name</th>
        <th>Photo</th>
        <th>Actions</th>
      </tr>

      <% @cuisines.each do |cuisine| %>
      <tr>
        <td><%= cuisine.cuisine_name %></td>
        <td><%= cuisine.photo %></td>
        <td>
          <a href="/cuisines/<%= cuisine.id %>" class="btn btn-primary">Show</a>
          <a href="/cuisines/<%= cuisine.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cuisine/<%= cuisine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


<div class = "container">
<div class="row">


  <% @cuisines.order('cuisine_name').each do |cuisine| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <a href="/cuisines/<%= cuisine.id %>"> <img src="<%= cuisine.photo %>" class = "img-responsive"> </a>
      <div class="caption">
        <a href="/cuisines/<%= cuisine.id %>"> <h3><%= cuisine.cuisine_name %></h3> </a>
      </div>
    </div>
  </div>
  <% @counter = @counter + 1 %>
  <% if @counter%3 == 0 %>
</div>
<% end  %>
<% end  %>
</div>
</div>
