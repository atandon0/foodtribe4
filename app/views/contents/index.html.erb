<div class="page-header">
  <h1>
    Contents
    <a href="/contents/new" class="btn btn-lg btn-success">New Content</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo video</th>
        <th>Description</th>
        <th>User</th>
        <th>Caption</th>
        <th>Occassion</th>
        <th>Special diet</th>
        <th>Cuisine</th>
        <th>Actions</th>
      </tr>

      <% @contents.each do |content| %>
      <tr>
        <td><%= content.photo_video %></td>
        <td><%= content.description %></td>
        <td><%= content.user_id %></td>
        <td><%= content.caption %></td>
        <td><%= content.occassion_id %></td>
        <td><%= content.special_diet_id %></td>
        <td><%= content.cuisine_id %></td>
        <td>
          <a href="/contents/<%= content.id %>" class="btn btn-primary">Show</a>
          <a href="/contents/<%= content.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_content/<%= content.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
