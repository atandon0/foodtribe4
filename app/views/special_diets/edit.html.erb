<!-- Validation failure messages -->
<% if @special_diet.errors.any? %>
  <% @special_diet.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @special_diet.special_diet_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_special_diet/<%= @special_diet.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for special_diet_name -->
      <div class="form-group">
        <label for="special_diet_name" class="control-label">
          Special diet name
        </label>

        <input type="text" id="special_diet_name" name="special_diet_name" placeholder="Special diet name" class="form-control" value="<%= @special_diet.special_diet_name %>">
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="control-label">
          Photo
        </label>

        <input type="text" id="photo" name="photo" placeholder="Photo" class="form-control" value="<%= @special_diet.photo %>">
      </div>

      <button class="btn btn-warning">
        Update Special Diet
      </button>
      or
      <a href="/special_diets/<%= @special_diet.id %>">Cancel</a>
    </form>
  </div>
</div>
